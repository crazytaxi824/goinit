{
  // golangci-lint 设置
  "go.lintTool": "golangci-lint",

  // save 时执行 golangci-lint
  "editor.formatOnSave": true, // save 的时候格式化文件

  // NOTE lint 整个 package，使用 file 检查可能有引用问题导致报错。
  "go.lintOnSave": "package",

  "go.lintFlags": [
    "--fast", // without --fast can freeze your editor.

    // golangci-lint 配置文件地址
    // "--config=${workspaceRoot}/golangci.yml" // 本地
    // "--config=~/.golangci/prod-ci.yml" // production
    "--config=~/.golangci/dev-ci.yml" // development
  ],

  // search.exclude 用来忽略搜索的文件夹
  // files.exclude 用来忽略工程打开的文件夹
  // 直接写文件/文件夹名字就实在项目根路径下进行匹配，不要用 / ./ 开头，
  // **/所有路径下进行匹配
  "search.exclude": {
    ".idea": true,
    // "**/pkg": true,
    "*.iml": true,
    "**/vendor": true,
    ".history": true
  },

  // files.exclude 不显示文件，
  // 直接写文件/文件夹名字就实在项目根路径下进行匹配，不要用 / ./ 开头，
  // **/所有路径下进行匹配
  "files.exclude": {
    ".idea": true
    // "**/pkg": true,
  }
}
