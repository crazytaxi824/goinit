{
  "version": "0.2.0",
  "configurations": [
    {
      // run single file
      "name": "current file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      // launch project
      "name": "src/main.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/src/main.py",
      "console": "integratedTerminal"
    }
  ]
}
